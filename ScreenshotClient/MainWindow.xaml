<!-- ScreenshotClient/MainWindow.xaml (minimal timeline snippet; merge into your layout) -->
<Window x:Class="ScreenshotClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TimeTracker" Height="600" Width="900">
    <DockPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Screenshots}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="6" Padding="6" BorderBrush="#DDD" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="{Binding Path}" FontSize="12"/>
                                <Image Source="{Binding Thumbnail}" Height="180" Stretch="Uniform" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</Window>